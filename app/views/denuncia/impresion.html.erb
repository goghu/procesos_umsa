			<tr>
				<td width="20%">
					<blockquote>
						<time datetime="fechaISO">
							<%= @datos_denuncia.fecha %>
						</time>
						<b>COM.UNIV.PROC.CERTF:<%= @datos_denuncia.codigo_caso %></b>
