<div class="row">
  <div class="col-lg-12">
    <div class="card card-outline-info">
      <div class="card-block">
        <%= form_for :reporte, :url => { :action => :genera_reporte } do |form| %>
          <div class="form-body">
            <div class="row p-t-20">
              <div class="col-md-6">
                <div class="form-group">
                  <label class="control-label">Fecha inicial</label>
                  <%= form.date_field :fecha_inicial, id: :icon_nombre, class: 'form-control', required: 'required' %>
                </div>
              </div>
              <!--/span-->
              <div class="col-md-6">
                <div class="form-group">
                  <label class="control-label">Fecha Final</label>
                  <%= form.date_field :fecha_final, id: :icon_archivo, class: 'form-control', required: 'required' %>
                </div>
              </div>
              <!--/span-->
            </div>
            <!--/row-->
            <div class="row">
              <div class="col-lg-6 col-md-6">
                <button type="submit" class="btn btn-block btn-success"><i class="fa fa-check"></i> Genera Reporte</button>
              </div>
              <!--/span-->
              <div class="col-md-6">
                <div class="form-group">
                  <button type="submit" class="btn btn-block btn-inverse"> Cancelar</button>
                </div>
              </div>
              <!--/span-->
            </div>
            <!--/row-->
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>