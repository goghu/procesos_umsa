                                <h1>&nbsp;</h1>

                                <!-- cabecera -->
                                <table class="cabecera">
                                  <tr>
                                    <td style="width: 60%">
                                      <blockquote>
                                        <h2 class="font-Arial"><p><b>La Paz, <%= @datos_impreso.fecha_emi_certf %></b></p>
