                                        </div>

<% content_for :add_js do %>
  <script src="<%= asset_path '/js/jquery-qrcode-0.14.0.js' %>"></script>
  <script>
      var textoqr = "La Paz, <%= @datos_impreso.fecha_emi_certf %> \n COM.UNIV.PROC.CERTF: <%= @datos_impreso.correlt_certf %> \n Reg.No.<%= @datos_impreso.no_reg %>";

      var options = {
        render: 'image'
        , size: 95
        , background: '#fdfdfd'
        , text: textoqr
      };

      $('#codigoQR').qrcode(options);
      $('#codigoQR2').qrcode(options);
    </script>
<% end %>
