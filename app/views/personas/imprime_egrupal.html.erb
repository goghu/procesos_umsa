<style>

  blockquote {
    padding: 3px;
    border: Black 5px solid;
    border-radius: 15px;
    font-family: Arial Black;
    font-weight: bold;
    font-size: 10pt;
  }

  .impresion {
    width: 850px;
    color: #000000;
  }

  .cabecera {
    width: 100%;
  }

  .contenido {
    text-align: justify;
    font-size: 14pt;
  }

  .tabla-datos {
    margin: auto;
    border: 0px solid #000000;
    width: 80%;
  }

  .tabla-datos tr td{
    border: 1px solid #000000;
    padding-left: -5px;
  }

  .tabla-datos tr th{
    border: 1px solid #000000;
    font-weight: 700;
    text-align: center;
  }

  @media print {

    .left-sidebar {
      display: none;
    }

    .topbar {
      display: none;
    }

    blockquote {
      padding: 1px;
      border: Black 5px solid;
      border-radius: 15px;
    }

    .impresion {
      width: 850px;
    }

    .cabecera {
      width: 100%;
    }

    .contenido {
      text-align: justify;
      font-size: 14pt;
    }

  }
</style>

<!--1ra fila tabla para poner fecha del certificado-->
