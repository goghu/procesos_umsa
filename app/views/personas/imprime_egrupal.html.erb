                              <td width="65%" height="50px">&nbsp;
                                <h4 class="font-bold text-justify">
                                  <%= p.persona.nombre %>
                                  <%= p.persona.ap_paterno %>
                                  <%= p.persona.ap_materno %></h4></td>
                                </td>

