<table class="table table-striped">
    <thead>
        <tr>
            <td>ID</td>
            <td>CI</td>
            <td>NOMBRE_APELLIDOS</td>
            <td>FACULTAD</td>
            <td>CARRERA</td>
            <td>TIPO</td>
            <td></td>
        </tr>
    </thead>
    <tbody>
        <% @datos_personas.each do |fp| %>
            <tr id="<%= fp.id %>" class="table">
                <td><%= fp.id %></td>
                <td><%= fp.ci %></td>
                <td><%= fp.ap_paterno %>
                    <%= fp.ap_materno %>
                    <%= fp.nombre %></td>

                <td><%= fp.facultad %></td>
                <td><%= fp.carrera %></td>
                <td><%= fp.tipo %></td>
                <td>
                    <button type='button' id='bt_sel' class='btn btn-success'>
                        <i class='mdi mdi-check'></i>
                    </button>
                </td>
            </tr>
        <% end %>
    </tbody>
</table>

<script type="text/javascript">

    $("tr.table").click(function () {

        var tableData = $(this)
            .children("td")
            .map(function () {
                return $(this).text();
            })
            .get();

        // var btn = "<button type='button' id='bt_sel' class='btn btn-success'>				<i
        // class='mdi mdi-check'></i></button>";

        var id = $.trim(tableData[0]);
        var ci = $.trim(tableData[1]);
        var nombre = $.trim(tableData[2]);
        var facultad = $.trim(tableData[3]);
        var carrera = $.trim(tableData[4]);

        $("#carga_nombre").html(
            '<input type="hidden" name="persona[id]" value="' + id + '"><b>CI: </b> ' + ci + ' <b> NOMBRE' +
            ' </b>' + nombre
        );

        // console.log(tableData); alert("Your data is: " + $.trim(tableData[0]) + " , "
        // + $.trim(tableData[1]) + " , " + $.trim(tableData[2]));
    });

