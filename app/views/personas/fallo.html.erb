<h2><b>Abogado/Fallo</b></h2>
<style type="text/css">
blockquote {
  padding: 3px 10px;
  border: Black 5px solid;
  border-radius: 20px;
}
</style>

<style>

@media print {
    /*@page {
        size: letter landscape
    }
*/
    .left-sidebar{
      display: none;
    }

    .topbar{
      display: none;
    }

}

</style>
<div class="form-body">
<div class="row">
  <div class="col-md-12">
    <div class="card card-outline-info">
      <div class="card-block">
        <%= form_tag('/persona/guarda_fallo', method: "POST")do %>
          <div class="form-body">

          <!--Primera fila-->
            <div class="row">
          <!-- 1ra columna-->
           <div class="col-lg-4">
              <div class="form-group">
                <div style="text-align: "> 
                <label class="control-label"> 
                <h3><b><p>BUSCAR CI: </p> </b></h3></label>
                <h3><b><p><%= text_field(:persona, :ci)%>
                </p></b></h3>
                </div>
              </div>
            </div>
            <!-- fin 1ra columna -->

           <!-- 2da columna -->
           
            <div class="col-md-4">
              
                <label class="control-label">
                
                  <h3><b>Fallo</b></h3></label>
                <%= select_tag "persona[fallo]", 
                options_for_select([['SI'], ['NO']]), 
                {
                  :class => 'form-control', 
                  required: 'required',
                } 
                %>
              </div>
            </div>
          <!--fin 2da columna-->
           </div>
          <!--fin 1ra fila-->
                  
       <!--2da columna-->
       <div class="row p-t-25">

            <div class="col-md-3">
                <div class="form-group">
                  <label class="control-label">
                    <h3><b>Observaciones</b></h3></label>
                  <%= text_field (:persona, :observaciones) %>
                </div>
              </div>
          

          <!--fin de 4ta columna de obs> -->
       

          <!-- fin de 3ra columna>

            <!-- 2da columna-->
          
            <div class="col-md-6">
              <div class="form-group">
                <div class="card card-outline-info">
                  <div class="card-block">
                    <label class="control-label"> 
                      <h3><b><p> ID PERSONA: </p> </b></h3></label>
                        <label class="control-label"><p> <b><h3>ELEGIR/ACTUALIZAR-FALLO</h3></b></p></label>
                        <div id="carga_nombre">
                        </div>
                      </div>
                  </div>
                </div>  
              </div>
            </div>         
            <!-- fin 2da columna -->
 <!-- 3ra fila -->
          <div class="row p-t-25">

            <!--primera columna-->
            <div class="col-md-4">
              <div class="form-group">
                <div id= "fallo_persona"></div>
                <label class="control-label">
                  <h3 fallo></h3></label>
            </div>
            </div>
            <!--fin primera columna-->
           </div>
          <!--fin segunda fila-->


          <div class="form-actions">
            <button type="submit" class="btn btn-success"><i class="fa fa-check"></i> Save</button>
            <button type="button" class="btn btn-inverse">Cancel</button>
          </div>
 
        </div>      
      </div>
    </div>
  </div>  
</div>
</div>


<% end %>

<script>
  $("#persona_ci").keyup(function () {
    var campo_texto = $("#persona_ci").val();
    var cantidad_letras = campo_texto.length;
    // console.log('var: '+campo_texto);
    if(cantidad_letras > 3){        
      //alert('entro');
      $.ajax({
        type: 'GET',
        url: '/persona/bs_ci_ajax/'+campo_texto,
        data: {"dato_crt": campo_texto},
        success: function(data, textStatus, jqXHR){
          $("#fallo_persona").load('/persona/bs_ci_ajax/'+campo_texto);
        }
      });
    }
  });
</script>