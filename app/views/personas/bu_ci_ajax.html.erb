<table class="table table-striped">
	<thead>
		<tr>
			<td>ID</td>
			<td>CI</td>
			<td>NOMBRE_APELLIDOS</td>
			<td>FACULTAD</td>
			<td>CARRERA</td>
			<td>DIRECCION</td>
			<td>TELEFONO</td>
			<td>TIPO</td>
			<td>FALLO</td>
			<td>FECHA_emi_certf</td>
			<td></td>
		</tr>
	</thead>
	<tbody>
		<% @datos_personas.each do |ep| %>
		<tr id="<%= ep.id %>" class="table">
			<td><%= ep.id %></td>
			<td><%= ep.ci %></td>
			<td><%= ep.ap_paterno %> <%= ep.ap_materno %> <%= ep.nombre %></td>
			<td><%= ep.facultad %></td>
			<td><%= ep.carrera %></td>
			<td><%= ep.direccion %></td>
			<td><%= ep.telefono %></td>
			<td><%= ep.tipo %></td>
			<td><%= ep.fallo %></td>
			<td><%= ep.fecha_emi_certf %></td>
			<td>
				<button  
				type='button'
				id='bt_sel' 
				class='btn btn-success'
				onclick="selecciona_persona(<%= ep.id %>)">
				<i class='mdi mdi-check'></i></button>
			</td>			
		</tr>
		<% end %>
	</tbody>
</table>

