<table class="table table-striped">
	<thead>
		<tr>
			<td>ID</td>
			<td>CI</td>
			<td>NOMBRE</td>
			<td>FALLO</td>
			<td>REVISADO</td>
			<td>OBSERVACION</td>
			<td>CARRERA</td>
			<td></td>
		</tr>
	</thead>
	<tbody>
		<% @datos_personas.each do |ep| %>
		<tr id="<%= ep.id %>" class="table">
			<td><%= ep.id %></td>
			<td><%= ep.ci %></td>
			<td><%= ep.ap_paterno %> <%= ep.ap_materno %> <%= ep.nombre %></td>
			<td><%= ep.fallo %></td>
			<td><%= ep.rev_inic %></td>
			<td><%= ep.observacion %></td>
			<td><%= ep.no_inf %></td>
			<td><%= ep.fecha %></td>
			<td><%= ep.codigo_caso %></td>
			<td><%= ep.tipo_resol %></td>
			<td><%= ep.h_ruta %></td>
			<td><%= ep.carrera %></td>
			<td>
				<button  
				type='button'
				id='bt_sel' 
				class='btn btn-success'
				>
				<i class='mdi mdi-check'></i></button>
			</td>			
		</tr>
		<% end %>
	</tbody>
</table>

