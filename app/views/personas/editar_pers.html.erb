              <div class="col-md-3">
                <div class="form-group">
                  <label class="control-label">
                  <h3><b>Carnet Identidad</b></h3></label>
                  <h3><b><%=text_field(:persona, :ci) %></b></h3>
                </div>
              </div>
            
            <!-- fin de 1ra columna -->

          <!--   2da columna 2da fila -->

              <div class="col-md-3">
                <div class="form-group">
                   <label class="control-label">
                    <h3><b>RU/ITEM:</b></h3></label>
                    <h3><b><%=text_field(:persona, :Ru) %></b></h3>
                  </div>
