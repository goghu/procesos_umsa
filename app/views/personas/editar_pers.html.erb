              <!--fin de 2da columna-->

              <!--3ra columna-->
            <div class="col-md-3">
              <div class="form-group">
                <label class="control-label">
                  <h3><b>Tipo Persona</b></h3></label>
                 <h3><b><%=text_field(:persona, :tipo) %></b></h3>
                 </div>
              </div>
      </div>
            <!--fin 3ra columna y 2da fila-->
            
            <!-- 3ra fila y 1ra columna-->
            <div class="row p-t-25">
              <div class="col-md-3">
                <div class="form-group">
                  <label class="control-label">
                    <h3><b>Nombre</b></h3></label>
                    <h3><b><%=text_field(:persona, :nombre)%></b></h3>             
                </div>
              </div>
              <!--fin de 1ra columna-->

              <!--2da columna-->
              <div class="col-md-3">
                <div class="form-group">
                  <label class="control-label">
                  <h3><b>Ap_Paterno</b></h3></label>
                  <h3><b><%=text_field(:persona, :ap_paterno)%></b></h3>
                </div>
              </div>

              <!--fin de 2da columna-->

              <!--3ra columna-->
              <div class="col-md-3">
                <div class="form-group">
                  <label class="control-label">
                    <h3><b>Ap_Materno</b></h3></label>
                    <h3><b><%=text_field(:persona, :ap_materno)%></b></h3>
                  </div>
              </div>
             </div>
            <!--fin de 3ra fila y 3ra columna-->

            <!--fin de 4ta fila y 1ra columna-->
             <div class="row p-t-25">
               <div class="col-md-3">
                <div class="form-group">
                  <label class="control-label">
                  <h3><b>Facultad</b></h3></label>
                  <h3><b><%=text_field(:persona, :facultad)%></b></h3>
                </div>
              </div>
                  <!--fin 1ra columna-->

                  <!--2da columna-->
              <div class="col-md-3">
                <div class="form-group">
                  <label class="control-label">
                    <h3><b>Carrera</b></h3></label>
                    <h3><b><%=text_field(:persona, :carrera)%> </b></h3>
                </div>
              </div>
              <!--fin de 2da columna-->

              <!--3ra columna-->
            <div class="col-md-3">
              <div class="form-group">
                <label class="control-label">
                  <h3><b>Categoria</b></h3></label>
                <%= select_tag "persona[categoria]", options_for_select([['Titular_A'], ['Titular_B'], ['Titular_C'], ['Titular_E'], ['Otro']]), {:class => 'form-control', required: 'required', :prompt => "Seleccione categoria", required: 'required'} %>
