            <!-- fin 2da columna -->

            <!-- 3ra columna -->
            <div class="col-md-3">
              <div class="form-group">
               <div id="fallo_persona"></div> 
                <label class="control-label">
                <h3><b>Fallo</b></h3></label>
                <h3><b><%=text_field(:persona, :fallo)%></b></h3> </div>     
              </div>
            </div>
          <!-- fin 4ta fila y 3ra columna -->


          <!-- 5ta fila y 1ra columna -->
          <div class="row p-t-25">
            <div class="col">
              <div class="form-group">
                <label class="control-label">
                  <h3><b>Observacion</b></h3></label>
               <h3><b><%=text_field(:persona, :observacion)%></b></h3>
            </div>
